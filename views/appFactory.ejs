 <script type="text/javascript">
  var $appItemContainer = $('.app-item-container');
  $appItemContainer.click(function(e){
      var $this = $(this);
       $appItemContainer.parent().removeClass('app-store-item-selected');
        $this.parent().addClass('app-store-item-selected');
    }); 

  $('.configureInstancesBtn').click(function(e){
    var data = {};
    data.pid = <%=pid%>;
    var $selectedItems = $('.app-store-item-selected');
    if(!$selectedItems.length) {
         alert('Please choose an instance');
         return;
    }
    data.templateName = $appItemContainer.attr('data-appFact-title');
    data.thumbnailHtmlString = $selectedItems.html();
    var $appStoreGalleryArea = $('.appStoreGalleryArea').hide(); 
    var $appStoreConfigurationArea = $('.appStoreConfigurationArea').empty().append('<img class="center-block" style="height:50px;width:50px;margin-top: 10%;margin-bottom: 10%;" src="img/loading.gif" />').show();
      
      $.post('/app_factory/configureTemplate',data,function(data){
         $appStoreConfigurationArea.empty().append(data);
      });

  });


 </script>